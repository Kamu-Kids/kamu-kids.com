---
import type { CollectionEntry } from "astro:content";
import AvainsanatLayout from "@/layouts/AvainsanatLayout.astro";
import { getCollectionStaticPaths } from "@/lib/collection-helpers";

export interface Props {
	data: CollectionEntry<"avainsanat">;
}

export async function getStaticPaths() {
	return await getCollectionStaticPaths("avainsanat", "en");
}

const { data: avainsanat } = Astro.props;
const { Content } = await avainsanat.render();
---

<AvainsanatLayout frontmatter={avainsanat}>
	<Content />
</AvainsanatLayout>
